<Page x:Class="Arvato.TestProject.UsrMgmt.UI.Desktop.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
	Title="MainMenuPage">

    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,12">
            <Button Content="Add User" Name="addUserButton" MinWidth="75" Click="addUserButton_Click" />
            <Button Content="Edit User" Name="editUserButton" MinWidth="75" />
            <Button Content="Delete User" Name="deleteUserButton" MinWidth="75" />
            <Button Content="Sign out" Name="signOutButton" MinWidth="75" Click="signOutButton_Click" />
        </StackPanel>
        <DataGrid AutoGenerateColumns="True" Name="dataGrid1" VerticalAlignment="Stretch" ItemsSource="{Binding Users}" IsReadOnly="True" SelectionChanged="dataGrid1_SelectionChanged" />
    </DockPanel>
</Page>
